<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/box_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newListTitle"
        android:text="New List"
        android:textSize="30sp"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/listTitleInputText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newListTitle"
        android:hint="Enter List's Title"
        android:textSize="20sp"
        tools:ignore="HardcodedText, TextFields, Autofill" />


    <RelativeLayout
        android:id="@+id/inputAndColorPick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listTitleInputText"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Change Background Color"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/color_button"
            android:background="@android:color/darker_gray"
            android:elevation="0dp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:text="create"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/inputAndColorPick"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputAndColorPick"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="BACK"
        android:textColor="@android:color/holo_blue_dark"
        tools:ignore="HardcodedText" />

</RelativeLayout>