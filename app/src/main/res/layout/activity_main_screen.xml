<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainScreenActivity">

    <include
        layout="@layout/main_toolbar"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_screen_viewpager"
        android:layout_below="@id/mainpage_toolbar"
        android:layout_above="@id/main_screen_tabs">

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_screen_tabs"
        android:layout_alignParentBottom="true"
        app:tabBackground="@drawable/selector_tablayout_background"
        app:tabGravity="fill"
        app:tabIndicatorColor="#000"
        app:tabMode="fixed" />

</RelativeLayout>