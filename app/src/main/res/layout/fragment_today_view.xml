<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.TodayViewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dropdown_menu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText, contentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Today_Page_Title"
        android:layout_below="@id/dropdown_menu"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Today"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_Lists_recyclerview"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Today_Page_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:clickable="true"
        android:focusable="true"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_tasks_today_text"
        android:text="You have no Tasks today!"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:visibility="invisible"/>


</RelativeLayout>