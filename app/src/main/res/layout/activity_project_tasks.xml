<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ProjectTasksActivity">

    <include
        layout="@layout/main_toolbar"
        android:id="@+id/app_main_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_title"
        android:textSize="20sp"
        android:background="@color/light_grey"
        android:layout_below="@id/app_main_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/All_Project_Tasks"
        android:textSize="20sp"
        android:text="All Tasks"
        android:layout_below="@id/project_title"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_tasks_recyclerview"
        android:layout_below="@id/All_Project_Tasks"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>