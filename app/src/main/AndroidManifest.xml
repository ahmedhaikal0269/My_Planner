<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ahmed.haikal.myplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.ProjectTasksActivity"
            android:exported="false" />
        <activity
            android:name=".View.GroupWorkActivity"
            android:exported="false" />
        <activity
            android:name=".View.TaskListActivity"
            android:exported="false" />
        <activity
            android:name=".View.ProjectsActivity"
            android:exported="true" />
        <activity
            android:name=".View.Main_Screen.MainScreenActivity"
            android:exported="true" />
        <activity
            android:name=".View.Sign_In_Or_Up.Sign_In_Up_Activity"
            android:exported="true" />
        <activity
            android:name=".View.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>